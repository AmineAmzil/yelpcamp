<% layout('layouts/boilerplate') %>

<h1>All Campgrounds:</h1>
<a href="/campgrounds/new">Add new campground.</a>
<% for(let camp of campgrounds){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= camp.image %> " class="img-fluid rounded-start" alt="">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <%= camp.title %>
        </h5>
        <p class="card-text">By: <small class="text-muted">
            <%= camp.owner.username %>
          </small>
        </p>
        <p class="card-text">
          <%= camp.description %>
        </p>
        <p class="card-text"><small class="text-muted">
            <%= camp.location %>
          </small>
        </p>
        <a href="/campgrounds/<%= camp._id %>" type="button" class="btn btn-primary">View</a>
      </div>
    </div>
  </div>
</div>
<% } %>